{
    "compilerOptions": {

        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "../build",
        "removeComments": true,

        "experimentalDecorators": true,

        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitThis": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,

        "noEmitOnError": true
    }
}